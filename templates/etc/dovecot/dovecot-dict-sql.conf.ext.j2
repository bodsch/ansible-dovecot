{% if dovecot_dict_sql.connects is defined  and
      dovecot_dict_sql.connects | count > 0 %}
connect                      = host={{ dovecot_dict_sql.connects.host }} dbname={{ dovecot_dict_sql.connects.dbname }} user={{ dovecot_dict_sql.connects.user }} password={{ dovecot_dict_sql.connects.password }}
{% endif %}

{% if dovecot_dict_sql.maps is defined and
      dovecot_dict_sql.maps | count > 0 %}
  {% for m in dovecot_dict_sql.maps %}
map {
    {% for k, v in m.items() %}
      {% if v | type != "dict" %}
  {{ "%-26s" | format(k) }} = {{ v }}
      {% else %}

  {{ k }} {
    {% for kk, vv in v.items() %}
    {{ "%-24s" | format(kk) }} = {{ vv }}
    {% endfor %}
  }
      {% endif %}
    {% endfor %}
}
  {% endfor %}
{% endif %}
