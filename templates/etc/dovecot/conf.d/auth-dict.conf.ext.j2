{% if dovecot_authentications.dict is defined and
      dovecot_authentications.dict | count > 0 %}
  {% for _type, values in dovecot_authentications.dict.items() %}
    {% if values | count > 0 %}
{{ _type }} {
      {% for k, v in values.items() %}
        {% if v | type == "bool" %}
  {{ "%-26s" | format(k) }} = {{ v | ternary('yes', 'no') }}
        {% else %}
  {{ "%-26s" | format(k) }} = {{ v }}
        {% endif %}
      {% endfor %}
}
    {% endif %}
  {% endfor %}
{% endif %}
